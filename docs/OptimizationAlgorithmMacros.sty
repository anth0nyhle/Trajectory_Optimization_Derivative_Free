\newcommand{\libParameter}[4][]{
	\ifthenelse{\isempty{#1}}{\textbf{#2} - #3}{\textbf{#2} (\textbf{#4}) - #3}
}

\newcommand{\URDFFile}[1][]{
	\libParameter[#1]{URDF\_File}{File path to the Unified Robotics Description Format (URDF) file for the robot. (e.g. \path{D:\Optimization_Algorithm_Data\m20iag.urdf}).}{P}
}

\newcommand{\BaseName}[1][]{
	\libParameter[#1]{BaseName}{The name of the link within the URDF file for the robot representing the base of the robot (e.g. base).}{P}
}

\newcommand{\EndEffectorName}[1][]{
	\libParameter[#1]{EndEffectorName}{The name of the link within the URDF file for the robot representing the end-effector of the robot (e.g. tool0).}{P}
}

\newcommand{\VelocityLimits}[1][]{
	\libParameter[#1]{VelocityLimits}{A 6 component vector specifiying the velocity limits of each of the six joints of the robot - specified in rad/second.}{P}
}

\newcommand{\Tolerance}[1][]{
	\libParameter[#1]{Tolerance}{The joint limit, joint velocity limit, and total positional accuracy tolerance. Typically very small, e.g. 0.001.}{P}
}

\newcommand{\RotTolerance}[1][]{
	\libParameter[#1]{RotTolerance}{A trajectory maintains its kinetic properties if it is rotated about the gravitational axis (in the formulation of this optimization problem, the z-axis). This parameter specifies the tolerance of the actual axis of rotation for the trajectory from the gravitational axis. Expressed as the dot product of the actual axis of rotation with the x and y axes. Typically very small, e.g. 0.001.}{P}
}

\newcommand{\XTol}[1][]{
	\libParameter[#1]{XTol}{A stopping criterion for the optimization algorithm. If every optimization parameter changes by less than its absolute value multiplied by this parameter, then the optimization algorithm is stopped. Typically very small, e.g. 0.001.}{P}
}

\newcommand{\MaxEval}[1][]{
	\libParameter[#1]{MaxEval}{The maximum number of iterations that the optimization algorithm will run.}{P}
}

\newcommand{\Algorithm}[1][]{
	\libParameter[#1]{Algorithm}{The NLopt algorithm to utilize for solving the optimization problem. Only the COBYLA algorithm has been tested. If another algorithm is chosen, it will need to be a derivative-free numerical optimization method.}{P}
}

\newcommand{\WorkspaceLowerCorner}[1][]{
	\libParameter[#1]{WorkspaceLowerCorner}{The optimization problem allows for the specification of workspace bounds in terms of a rectangular prism. The bounds are imposed upon the position of the robot end-effector. The units will be based on the units utilized in the URDF file. This parameter specifies the lower left-hand corner of the rectangular prism.}{P}
}

\newcommand{\WorkspaceUpperCorner}[1][]{
	\libParameter[#1]{WorkspaceUpperCorner}{The optimization problem allows for the specification of workspace bounds in terms of a rectangular prism. The bounds are imposed upon the position of the robot end-effector. The units will be based on the units utilized in the URDF file. This parameter specifies the upper right-hand corner of the rectangular prism.}{P}
}

\newcommand{\TrajectoryFile}[1][]{
	\libParameter[#1]{TrajectoryFile}{File path to a frames trajectory file. (e.g. \path{D:\Motion_Capture_Data\JJ\UEK_015\UEK_015_JJ_free_01.smoothFrames.txt}).}{IP}
}

\newcommand{\TrajectoryFolderSubjects}[1][]{
	\libParameter[#1]{TrajectoryFolder}{Directory path for a single motion capture activity containing multiple subjects (e.g. \path{D:\Motion_Capture_Data\JJ}).}{IP}
}

\newcommand{\TrajectoryFolder}[1][]{
	\libParameter[#1]{TrajectoryFolder}{Directory path pointing to a folder containing frames trajectories (ending in \path{smoothFrames.txt}) to be optimized.}{IP}
}

\newcommand{\SeedsFile}[1][]{
	\libParameter[#1]{SeedsFile}{File path to \path{.csv} file containing initial guesses for the robot joint angles for the first timepoint of the trajectory. (e.g. \path{D:\Optimization_Algorithm_Data\Seeds\jointCombosH.csv}).}{IP}
}

\newcommand{\Toolframes}[1][]{
	\libParameter[#1]{Toolframes}{File path to \path{.csv} file containing tool frames to utilize for the optimization algorithm (e.g. \path{D:\Optimization_Algorithm_Data\Toolframes\toolframes30.csv}).}{IP}
}

\newcommand{\OutputDirectory}[1][]{
	\libParameter[#1]{OutputDirectory}{Path to a directory where solutions generated by the optimization algorithm should be output (e.g. \path{D:\OptAlgo_Output}).}{IP}
}